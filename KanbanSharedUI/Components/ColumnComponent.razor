<MudStack>
    <MudPaper Class="pa-4" Style="@($"background:{Colors.Grey.Darken4};")">
        <MudStack>
            <MudStack Class="align-center justify-center" Spacing="0">
                <MudText Typo="Typo.h3">@column.Title</MudText>
            </MudStack>
            <MudMenu Icon="@Icons.Material.Filled.Settings">
                <MudMenuItem>Add Card</MudMenuItem>
                <MudMenuItem>Rename</MudMenuItem>
                <MudMenuItem @onclick="InvokeRemoveColumnMethod">Delete</MudMenuItem>
            </MudMenu>
        </MudStack>
    </MudPaper>

    <MudPaper Class="pa-4" Style="@($"background:{Colors.Grey.Darken4};")">
        <MudStack Spacing="4">
            <!--DropZone Here-->
        </MudStack>
    </MudPaper>
</MudStack>

